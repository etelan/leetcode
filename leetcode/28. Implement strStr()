class Solution {
    public int strStr(String haystack, String needle) {
        
        int needleLength = needle.length();

        // If needle is empty, or bigger than the haystack
        if (needleLength == 0 || needle.equals(haystack)) {
            return 0; 
        }
        
        // If the needle is bigger than the haystack
        if (needleLength > haystack.length()) {
            return -1;
        }
    
        
        String[] haystackArray = haystack.split("");
        int stopAt = haystackArray.length - needleLength;
        
        for (int i = 0; i < haystackArray.length - needleLength + 1; i++) {
            
            if (haystack.substring(i, i + needleLength).equals(needle)) {
                    return i;
            }
            
        }
        
        // If not in haystack...
        return -1;
    }
}
